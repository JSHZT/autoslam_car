<launch>
  <param name="/use_sim_time" value="false" />
  <node name="obrobot_driver" pkg="obrobot_driver" type="obrobot_rf.py" output="screen" respawn="true">
    <rosparam file="$(find obrobot_driver)/config/my_params.yaml" command="load" />
  </node>

  <arg name="node_name"             value="velocity_smoother"/>
  <arg name="nodelet_manager_name"  value="nodelet_manager"/>
  <arg name="config_file"           value="$(find obrobot_driver)/config/yocs_velocity_smoother.yaml"/>
  <arg name="raw_cmd_vel_topic"     value="cmd_vel"/>
  <arg name="smooth_cmd_vel_topic"  value="smoother_cmd_vel"/>
  <arg name="robot_cmd_vel_topic"   value="robot_cmd_vel"/>
  <arg name="odom_topic"            value="odom"/>
  
  <!-- nodelet manager -->
  <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager_name)" args="manager" respawn="true"/>
  
  <!-- velocity smoother -->
